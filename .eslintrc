
{
  "env": {
    "browser": true,
    "es6": true,
    "mocha": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "rules": {
    "no-unused-vars": 2,
    "no-undef": 2,
    "eqeqeq": 2,
    "no-underscore-dangle": 0,
    "guard-for-in": 0,
    "no-extend-native": 2,
    "wrap-iife": 2,
    "new-cap": 2,
    "no-caller": 2,
    "quotes": [2, "single"],
    "no-loop-func": 2,
    "no-irregular-whitespace": 1,
    "no-multi-spaces": 2,
    "one-var": [2, "never"],
    "no-var": 2,
    "space-before-function-paren": [2, "always"],
    "no-console": 1
  },
  "globals": {
    "fetch": true
  }
}
